<mapper namespace="com.wayne.apihub.dao.DataSourceSolrDao">
    <resultMap id="solrSourceInfoMap" type="com.wayne.apihub.modules.datasource.info.SolrSourceConf">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="comments" property="comments"/>
        <result column="zk_hosts" property="zkHosts"/>
        <result column="zk_chroots" property="zkChroot"/>
    </resultMap>
    <insert id="insertSolrSource" parameterType="com.wayne.apihub.modules.datasource.info.SolrSourceConf"
            useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO api_hub.data_source_solr (name,comments,zk_hosts,zk_chroots) VALUES
        (#{solrSourceInfo.name,jdbcType=VARCHAR},#{solrSourceInfo.comments,jdbcType=VARCHAR},
        #{solrSourceInfo.zkHosts,jdbcType=VARCHAR},#{solrSourceInfo.zkChroot,jdbcType=VARCHAR})
    </insert>
    <select id="listSolrSource" resultMap="solrSourceInfoMap">
        SELECT id,name,comments,zk_hosts,zk_chroots FROM api_hub.data_source_solr ORDER BY id ASC
    </select>
    <select id="getSolrSourceById" resultMap="solrSourceInfoMap" parameterType="java.lang.Long">
        SELECT id,name,comments,zk_hosts,zk_chroots FROM api_hub.data_source_solr WHERE id = #{id}
    </select>
    <update id="updateSolrSourceStatus">
        UPDATE api_hub.data_source_solr
        <set>
            status = #{status}
        </set>
        WHERE id = #{id}
    </update>
</mapper>